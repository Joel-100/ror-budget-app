<section class="new-cat">
  <h3>New Transaction</h3>
  <div class="form">
    <%= form_with model: @entity, url: user_group_entities_path(current_user, @group) do |form| %>
      <% if @entity.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(@entity.errors.count, "error") %> prohibited this deal from being saved:</h2>
          <ul>
            <% @entity.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div style="margin-bottom: 0.7rem;">
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div style="margin-bottom: 0.7rem;">
        <%= form.label :amount, style: "display: block" %>
        <%= form.text_field :amount, class: "form-control" %>
      </div>
      <div>
        <%= form.submit "Add Transaction", class: "add-btn" %>
      </div>
    <% end %>
  </div>
</section>
